@model EpsilonDemoWebsite.Models.Truck

@{
    ViewData["Title"] = "Edit";
   Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <section>
                @using (Html.BeginForm("Edit","Truck"))
         {
           
            <div class="form-group" hidden>
                        <label for="type">TruckId</label>
                        <input type="text" class="form-control" name="TruckId" placeholder="Location Type" value=@Model.TruckId readonly>
                    </div>
            <div class="form-group">
               <label for="type">NumberPlate</label>
                        <input type="text" class="form-control" name="NumberPlate" placeholder="Location Type" value="@Model.NumberPlate">
               </div>
            <div class="form-group">
                            <label for="Bin">Bin</label>
                        
                            <select type="text" class="form-control" name="Bins">
                                @foreach (var item in ViewData["Bins"] as List<string>) {
                                <option>
                                    @item
                                </option>
                                }
                            </select>
                        </div>
            <div class="form-group">
                            <label for="Driver">Driver</label>
                        
                            <select type="text" class="form-control" name="Drivers">
                                @foreach (var item in ViewData["Drivers"] as List<string>) {
                                <option>
                                    @item
                                </option>
                                }
                            </select>
                        </div>
                        
                     <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button type="submit" class="btn btn-light" asp-controller="Truck" asp-action="Index">Cancel</button>
            </div>
           }
       </section>
        </div>
    </div>
</div>


