@model IEnumerable<EpsilonDemoWebsite.Models.Bin>
@{
    ViewData["Title"] = "Bins";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <section>
            <div class="row">
                <div class="col-lg-4"><p class="card-title">Bins</p></div>
                <div class="col-lg-5"> 
                    @using(Html.BeginForm("Index", "Bins", FormMethod.Get)) {  
                        @Html.TextBox("Search") <input type = "submit"  
                        name = "submit"  
                        value = "Search" class="btn btn-dark me-2"/> 
                    }
                </div>
                <div class="col-lg-3">
                    <a href='@Url.Action("addBin", "Bins", new { id=ViewContext.RouteData.Values["id"]})'>
                        <input type='button' value='Add Bin' class="btn btn-primary me-2"> 
                    </a>
                </div>
            </div>
                
                <div class="table-responsive">
                    <div style="height: 300px; overflow: auto;"> 
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BinId)
                                    </th>
                               @*<th>
                                    @Html.DisplayNameFor(model => model.Waste)
                                </th>*@
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BinId)
                                    </td>
                                    @* <td>
                                    @Html.DisplayFor(modelItem => item.Waste)
                                    </td>*@
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id=item.BinId }) |
                                        @Html.ActionLink("Details", "Details", new { id=item.BinId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id=item.BinId })
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                 </div>
            </section>
        </div>
    </div>
</div>
