@model EpsilonDemoWebsite.Models.BinSlot

@{
    ViewData["Title"] = "AssignBin";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<h1>Assign Bin</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignBin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                            <label for="binID">Bin</label>
                        
                            <select type="text" class="form-control" name="Bin">
                                @foreach (var item in ViewData["Bins"] as List<string>) {
                                <option>
                                    @item
                                </option>
                                }
                            </select>
                        </div>
            <div class="form-group">
                <label asp-for="GardenSite" class="control-label"></label>
                <input asp-for="GardenSite" name="GardenSite" class="form-control" value=  '@ViewData["ID"]'   />
                <span asp-validation-for="GardenSite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



