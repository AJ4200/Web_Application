@{
    ViewData["Title"] = "Waste Recycled Report";
    Layout = "~/Views/Shared/_ReportsLayout.cshtml";
}

<head>
    <script type="text/javascript">
        window.onload = function () {
            var data = {
    	            labels: @Html.Raw(ViewBag.WasteType),
    		        datasets:  [{
                        data: @Html.Raw(ViewBag.NumberOfLoads),
                    backgroundColor: [
                    'rgb(255,0,0,0.4)',
                    'rgb(0,255,0,0.4)',
                    'rgb(0,0,255,0.4)',
                    //'rgb(255,255,0,0.4)',
                    'rgb(0,255,255,0.4)',
                    'rgb(128,0,128,0.4)'
                    ],
                    hoverOffset: 4
                    }]
    	    };
             var dataline = {
    	            labels: @Html.Raw(ViewBag.Months),
    		        datasets:  [{
                        label:"Plastic",
                        data: @Html.Raw(ViewBag.Tonnage1),
                        borderColor: 'rgb(255,0,0,0.4)',
                        fill: false,
                    },
                    {
                        label:"Glass",
                        data: @Html.Raw(ViewBag.Tonnage2),
                        borderColor: 'rgb(0,255,0,0.4)',
                        fill: false,
                    },
                    {
                        label:"Industrial Waste",
                        data: @Html.Raw(ViewBag.Tonnage3),
                        borderColor: 'rgb(0,0,255,0.4)',
                        fill: false,
                    },
                    //{
                    //    label:"General Waste",
                    //    data: @Html.Raw(ViewBag.Tonnage4),
                    //    borderColor: 'rgb(255,255,0,0.4)',
                    //    fill: false,
                    //},
                    {
                        label:"Cardboard and Paper",
                        data: @Html.Raw(ViewBag.Tonnage5),
                        borderColor: 'rgb(0,255,255,0.4)',
                        fill: false,
                    },
                    {
                        label:"Garden Waste",
                        data: @Html.Raw(ViewBag.Tonnage6),
                        borderColor: 'rgb(128,0,128,0.4)',
                        fill: false,
                    }]
                   
    		        
    	    };
            
            var options = {
                scales: {
                    yAxes: [{
                        ticks: {
                        beginAtZero: true
                        }
                    }]
                },
                legend: {
                    display: false
                },
                elements: {
                    point: {
                        radius: 0
                    }
                }
            };
        
            if ($("#pieChart").length) {
                var pieChartCanvas = $("#pieChart").get(0).getContext("2d");
                // This will get the first returned node in the jQuery collection.
                var pieChart = new Chart(pieChartCanvas, {
                    type: 'bar',
                    data: data,
                    options:{
                        scales: {
                            yAxes: [{
                                display: true,
                                scaleLabel: {
                                display: true,
                                labelString: 'Number of Loads'
                                }
                            }],
                            xAxes: [{
                                display: true,
                                scaleLabel: {
                                display: true,
                                labelString: 'Waste Type'
                                }
                            }]
                        },
                        legend: {
                            display: false
                        },
                    }
                });
            }
            if ($("#lineChart").length) {
                var lineChartCanvas = $("#lineChart").get(0).getContext("2d");
                // This will get the first returned node in the jQuery collection.
                var lineChart = new Chart(lineChartCanvas, {
                    type: 'line',
                    data: dataline,
                    options:{
                        scales: {
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                        display: true,
                        labelString: 'Tonnage'
                        }
                    }],
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                        display: true,
                        labelString: 'Months'
                        }
                    }]
                },
                    }
                });
            }
            
            chart.render();
         }
    </script>
</head>
<body>
   
    <div class="col-lg-12 mb-4">
                <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Number of Loads Recycled</h4>
                   <div ><canvas height="100" id="pieChart"></canvas>   
                   </div>
                </div>
            </div>
    </div>
   
    <div class="col-lg-12 mb-4">
                <div class="card">
                <div class="card-body">
                     <h4 class="card-title">Weight of Recycled Waste</h4>
                   <div ><canvas height="100" id="lineChart"></canvas>
                   </div>
                </div>       
            </div>
        </div>
        
  <script src="../../wwwroot/wwwroot/vendors/chart.js/Chart.min.js"></script>
</body>