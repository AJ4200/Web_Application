@model IEnumerable<EpsilonDemoWebsite.Models.RecycleRequestView>

@{
    ViewData["Title"] = "Recycling Requests";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <section>
                <h4 class="card-title">Requests for Recycling</h4>
                <!--TODO: Search button-->
                <div class="table-responsive">
                    <div style="height: 300px; overflow: auto;"> 
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RequestDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Waste)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GardenSite)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RequestDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Waste)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GardenSite)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Complete", "Complete", new { id=item.Id }) 
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                 </div>
            </section>
        </div>
    </div>
</div>
