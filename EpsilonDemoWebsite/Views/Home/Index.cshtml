@model EpsilonDemoWebsite.Models.Session;
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc.RazorPages;

@{
    ViewData["Title"] = "Phi Collection";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class=" container-scroller">
    
    <!-- partial -->
    
      
        <!-- partial -->
        <!-- partial:../../partials/_sidebar.html -->
        

        <!-- partial -->
       
        <div class="content-wrapper">
            <!--Truck Queue-->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card container">
                    <div class="card-body">
                        <h4 class="card-title">Truck Queue</h4>
                        <div class="table-responsive">
                            <div style="height: 300px; overflow: auto;"> 
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Entered At</th>
                                            <th>Truck</th>
                                            <th>Driver</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var q in @ViewBag.Queue){
                                            <tr>
                                                <td>@q.Entered</td>
                                                <td>@q.Truck</td>
                                                <td>@q.Driver</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Pending Requests-->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card container">
                    <div class="card-body">
                        <h4 class="card-title">Pending Requests</h4>
                        <div class="table-responsive">
                            <div style="height: 300px; overflow: auto;"> 
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Request Number</th>
                                            <th>Bin</th>
                                            <th>Waste</th>
                                            <th>Garden Site</th>
                                            <th>Supervisor</th>
                                            <th>Request Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var request in @ViewBag.PendingRequests) {
                                            <tr>
                                                <td>@request.RequestNumber</td>
                                                <td>@request.Bin</td>
                                                <td>@request.Waste</td>
                                                <td>@request.GardenSite</td>
                                                <td>@request.Supervisor</td>
                                                <td>@request.RequestDate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
            <!--Current Month's Collection Log-->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card container">
                    <div class="card-body">
                        <h4 class="card-title">This Month's Collection Logs</h4><div class="table-responsive">
                            <div style="height: 300px; overflow: auto;"> 
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Collection Number</th>
                                            <th>Driver</th>
                                            <th>Sent To</th>
                                            <th>Waste</th>
                                            <th>Supervisor</th>
                                            <th>Collection Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var collectionLog in @ViewBag.CollectionLog) {
                                            <tr>
                                                <td>@collectionLog.CollectionNumber</td>
                                                <td>@collectionLog.Driver</td>
                                                <td>@collectionLog.SentTo</td>
                                                <td>@collectionLog.Waste</td>
                                                <td>@collectionLog.Supervisor</td>
                                                <td>@collectionLog.CollectionDate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    <!-- partial:../../partials/_footer.html -->
    
</div>

<!-- plugins:js -->
<script src="../../vendors/js/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<script src="../../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<!-- End plugin js for this page -->
