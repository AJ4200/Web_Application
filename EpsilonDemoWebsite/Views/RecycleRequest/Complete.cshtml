@model EpsilonDemoWebsite.Models.RecycleRequestView

@{
    ViewData["Title"] = "Complete Recyling Request";
    ViewData["Title"] = "Complete Recyling Request";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <section>
                @using (Html.BeginForm("Complete","RecycleRequest"))
                {
                    <div class="form-group">
                        <h4>Recycle Request</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2" hidden>Request ID</dt>
                            <dd class="col-sm-10" hidden>
                                <input type="text" style="border:none; border-color:transparent;" id="request" name="request" value=@Model.Id.ToString()>
                            </dd>
                            <dt class="col-sm-2">Request Date</dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RequestDate)
                            </dd>
                            <dt class="col-sm-2">Waste</dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Waste)
                            </dd>
                            <dt class="col-sm-2">Garden Sitee</dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.GardenSite)
                            </dd>
                        </dl>
                    </div>
                    <div class="form-group">
                        <label for="recyclerName">Recyclers</label>
                        <select type="text" class="form-control" id="recycler" name="recycler">
                            @foreach (var item in ViewData["Recyclers"] as List<string>) {
                            <option>
                                @item
                            </option>
                            }
                        </select>
                    </div>
                    
                    <a href='@Url.Action("Index", "RecycleRequest")'>
                        <input type='submit' value='Submit' class="btn btn-primary me-2">
                    </a>
                    <a href='@Url.Action("Index", "RecycleRequest")'>
                        <input type='button' value='Cancel' class="btn btn-light">
                    </a>
                }
            </section>
        </div>
    </div>
</div>